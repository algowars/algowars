########################################################################
# Algowars Backend Config
#
# This file is a starter environment configuration for the server.
# Copy this file to .env and update the values for your specific environment.
#
# Each variable is documented with:
#  - Description: What the variable is used for.
#  - Required: Whether the variable must be provided.
#  - Default: A suggested default value.
########################################################################

# PORT:
#   Description: The port on which the NestJS server listens.
#   Required: Yes
#   Default: 8080
PORT=8080

# CLIENT_ORIGIN_URLS:
#   Description: Comma-separated list of allowed client origins for CORS.
#   Required: Yes
#   Default: http://localhost:5173
CLIENT_ORIGIN_URLS=http://localhost:5173

# EVALUATOR_API_KEY:
#   Description: Judge0 API key used for authenticating with the evaluator service.
#   Required: Yes
#   Default: your-evaluator-api-key-here
EVALUATOR_API_KEY=your-evaluator-api-key-here

# EVALUATOR_URL:
#   Description: The URL endpoint for the Judge0 service.
#   Required: Yes
#   Default: https://evaluator.example.com/api
EVALUATOR_URL=https://evaluator.example.com/api

# EVALUATOR_HOST:
#   Description: The host for the Judge0 service.
#   Required: Yes
#   Default: evaluator.example.com
EVALUATOR_HOST=evaluator.example.com

# ISSUER_BASE_URL:
#   Description: The base URL of the issuer for auth0 authentication server.
#   Required: Yes
#   Default: https://issuer.example.com
ISSUER_BASE_URL=https://issuer.example.com

# AUDIENCE:
#   Description: The intended audience for authentication tokens in auth0 server.
#   Required: Yes
#   Default: https://api.example.com
AUDIENCE=https://api.example.com

# DATABASE_URL:
#   Description: The connection string for your database.
#   Required: Yes
#   Default: postgres://user@localhost:5432/dbname
DATABASE_URL=postgres://user:[YOUR-PASSWORD]@localhost:5432/dbname

# DATABASE_PASSWORD:
#   Description: The password for your database connection.
#   Required: Yes
#   Default: your-database-password
DATABASE_PASSWORD=your-database-password

# DATABASE_LOGGING:
#   Description: Allows database logging.
#   Required: No
#   Default: false
DATABASE_LOGGING=false

# PRODUCTION_DATABASE_URL:
#   Description: The connection string for your production database.
#   Required: No
#   Default: None
PRODUCTION_DATABASE_URL=

# PRODUCTION_DATABASE_PASSWORD:
#   Description: The password for your production database connection.
#   Required: No
#   Default: None
PRODUCTION_DATABASE_PASSWORD=

# SERVER_URL:
#   Description: The public URL of your NestJS server.
#   Required: Yes
#   Default: http://localhost:8080
SERVER_URL=http://localhost:8080
